{
  "root": {
    "devices": {
      "user:bjoern": {
        "user:bjoern:device1": true,
        "user:bjoern:device2": true
      }
    }
  },
  "users": {
    "Bjoern": {
      "uid": "user:bjoern"
    },
    "Paul": {
      "uid": "user:paul"
    },
    "Arnd": {
      "uid": "user:arnd"
    },
    "Weirdo": {
      "uid": "user:weirdo"
    }
  },
  "tests": {
    "devices/user:bjoern/user:bjoern:device1": {
      "description": "Users can read their device tokens",
      "canRead": [
        "Bjoern"
      ],
      "cannotRead": [
        "Paul",
        "Arnd",
        "Weirdo"
      ]
    },
    "devices/user:bjoern": {
      "description": "Users can add own device tokens",
      "canWrite": [
        {
          "auth": "Bjoern",
          "data": {
            "user:bjoern:device3": true
          }
        }
      ],
      "cannotWrite": [
        {
          "auth": "Paul",
          "data": {
            "user:paul:device1": true
          }
        }
      ]
    }
  }
}