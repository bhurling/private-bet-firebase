{
  "root": {
    "links": {
      "user:bjoern": {
        "incoming": {
          "user:paul": true
        }
      },
      "user:paul": {
        "incoming": {
          "user:arnd": true
        }
      }
    }
  },
  "users": {
    "Bjoern": {
      "uid": "user:bjoern"
    },
    "Paul": {
      "uid": "user:paul"
    },
    "Arnd": {
      "uid": "user:arnd"
    },
    "Weirdo": {
      "uid": "user:weirdo"
    }
  },
  "tests": {
    "links/user:bjoern/incoming": {
      "description": "Users can read their incoming link requests",
      "canRead": [
        "Bjoern"
      ],
      "cannotRead": [
        "Paul",
        "Arnd",
        "Weirdo"
      ]
    },
    "links/user:bjoern/incoming/user:paul": {
      "description": "Users can add/remove themselves to other users' incoming link requests",
      "canWrite": [
        {
          "auth": "Paul",
          "data": true
        },
        {
          "auth": "Paul",
          "data": {}
        }
      ],
      "cannotWrite": [
        {
          "auth": "Arnd",
          "data": true
        },
        {
          "auth": "Arnd",
          "data": {}
        },
        {
          "auth": "Bjoern",
          "data": true
        },
        {
          "auth": "Paul",
          "data": 1234
        },
        {
          "auth": "Paul",
          "data": {
            "crazy": "stuff"
          }
        }
      ]
    },
    "links/user:bjoern/incoming/user:arnd": {
      "description": "Users can not put other users into their incoming link requests",
      "canWrite": [
        {
          "auth": "Bjoern",
          "data": {}
        },
        {
          "auth": "Bjoern",
          "data": false
        }
      ],
      "cannotWrite": [
        {
          "auth": "Bjoern",
          "data": true
        }
      ]
    },
    "links/user:bjoern/confirmed/user:paul": {
      "description": "Users can confirm link if there is an incoming invitation",
      "canWrite": [
        {
          "auth": "Bjoern",
          "data": true
        }
      ],
      "cannotWrite": [
        {
          "auth": "Paul",
          "data": true
        }
      ]
    },
    "links/user:bjoern/confirmed/user:arnd": {
      "description": "Users can not confirm link if there is no incoming invitation",
      "cannotWrite": [
        {
          "auth": "Bjoern",
          "data": true
        }
      ]
    },
    "links/user:paul/confirmed/user:bjoern": {
      "description": "Users can confirm other persons link if there is an incoming invitation",
      "canWrite": [
        {
          "auth": "Bjoern",
          "data": true
        }
      ],
      "cannotWrite": [
        {
          "auth": "Paul",
          "data": true
        }
      ]
    }
  }
}