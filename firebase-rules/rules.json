{
  "rules": {
    "bets": {
      "$betId": {
        ".read": "data.child('users').hasChild(auth.uid)",
        ".write": "data.child('users').hasChild(auth.uid)"
      }
    },
    "feeds": {
      "$uid": {
        ".read": "$uid === auth.uid"
      }
    },
    "categories": {
      ".read": "auth !== null"
    },
    "profiles": {
      "public": {
        ".read": "auth !== null",
        "$uid": {
          ".write": "$uid === auth.uid"
        }
      },
      "private": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "links": {
      "$uid": {
        ".read": "$uid === auth.uid",
        "incoming": {
          "$oid": {
            ".write": "$oid === auth.uid || $uid === auth.uid",
            ".validate": "$oid === auth.uid && newData.isBoolean() || $uid === auth.uid && newData.val() != true"
          }
        },
        "outgoing": {
          ".write": "$uid === auth.uid"
        },
        "confirmed": {
          "$oid": {
            ".write": "$oid === auth.uid || $uid === auth.uid",
            ".validate": "$oid === auth.uid && root.child('links').child($oid).child('incoming').child($uid).val() == true || $uid === auth.uid && data.parent().parent().child('incoming').child($oid).val() == true"
          }
        }
      }
    },
    "devices": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
