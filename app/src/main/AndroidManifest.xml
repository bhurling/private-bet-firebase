<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.bhurling.privatebet">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrivateBet.NoActionBar">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".feed.FeedActivity" />

        <activity
            android:name=".add.AddBetActivity"
            android:label="I bet that"
            android:theme="@style/Theme.PrivateBet.NoActionBar.CleanTitle" />

        <service
            android:name=".signup.SignupService"
            android:exported="false" />

    </application>

</manifest>
