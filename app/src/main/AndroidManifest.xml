<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.bhurling.privatebet">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrivateBet">

        <activity
            android:name=".EntryActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".signup.SignupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PrivateBet.Signup" />

        <activity
            android:name=".home.HomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".friends.InviteActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".add.AddBetActivity"
            android:label="I bet that"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PrivateBet.CleanTitle"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <service
            android:name=".signup.SignupService"
            android:exported="false"
            android:screenOrientation="portrait" />

        <service android:name=".common.push.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".common.push.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name=".common.notification.invitation.InvitationReceivedNotificationService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="true" />

        <service android:name=".common.notification.invitation.AcceptInvitationService" />

    </application>

</manifest>
