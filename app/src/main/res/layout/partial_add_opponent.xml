<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bets_add_opponent_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="56dp"
        android:gravity="center_vertical"
        android:text="@string/add_bet_opponent_label"
        android:textAppearance="@style/TextAppearance.Widget.PrivateBet.Toolbar.CleanTitle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bets_add_opponent_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bets_add_opponent_title" />

</android.support.constraint.ConstraintLayout>