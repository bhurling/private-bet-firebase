<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bets_add_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        app:counterEnabled="true"
        app:counterMaxLength="80"
        app:counterTextAppearance="@style/TextAppearance.Widget.PrivateBet.TextInputLayout.Label"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/bets_add_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:imeOptions="actionDone"
            android:includeFontPadding="false"
            android:inputType="textCapSentences"
            android:lineSpacingExtra="4sp"
            android:maxLength="80"
            android:paddingBottom="16dp"
            android:textSize="28sp"
            tools:text="We will be unemployed by August 2016 with no money in our pockets" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>