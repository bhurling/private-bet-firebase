<resources>

    <!-- Base application theme. -->
    <style name="Theme.PrivateBet" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">?attr/colorPrimary</item>
        <item name="android:textColorTertiary">?attr/colorPrimary</item>

        <item name="buttonStyle">@style/Widget.PrivateBet.Button.Flat</item>
    </style>

    <style name="Theme.PrivateBet.Signup">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.PrivateBet.CleanTitle">
        <item name="toolbarStyle">@style/Widget.PrivateBet.Toolbar.CleanTitle</item>

        <!-- This is used to tint the back button in the toolbar -->
        <item name="android:colorControlNormal">@color/grey</item>
    </style>

    <style name="ThemeOverlay.PrivateBet.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
    </style>

    <!-- Style has to be applied in each toolbar manually. Otherwise, theme overlays aren't used -->
    <style name="Widget.PrivateBet.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.PrivateBet.Toolbar.CleanTitle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.PrivateBet.Toolbar.CleanTitle</item>
        <item name="contentInsetStartWithNavigation">48dp</item>
        <item name="titleMargin">0dp</item>
    </style>

    <style name="TextAppearance.Widget.PrivateBet.Toolbar.CleanTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/colorControlNormal</item>
    </style>

    <style name="Widget.PrivateBet.Button.Flat" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_flat</item>
    </style>

    <style name="Widget.PrivateBet.Button.Outline" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_outline</item>
    </style>

    <style name="Widget.PrivateBet.Button.Outline.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/btn_outline</item>
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Widget.PrivateBet.TextInputLayout.Label" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>
